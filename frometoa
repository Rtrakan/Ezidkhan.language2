                    "𐺩": "ى",
                    "𐺙": "ف",
                    "𐺟": "ژ",
                    "𐺉": "ح",
                    "𐺧": "ه",
                    "i": "",
                    "𐺨": "ي",
                    "𐺐": "گ",
                    "𐺝": "ك",
                    "𐺠": "ل",
                    "𐺡": "م",
                    "𐺢": "ن",
                    "𐺥": "ؤ",
                    "p'": "𐺃",
                    "𐺂": "پ",
                    "𐺜": "ق",
                    "𐺍": "ر",
                    "𐺑": "س",
                    "𐺒": "ش",
                    "𐺕": "ط",
                    "𐺣": "و",
                    "𐺣𐺣": "وو",
                    "𐺛": "ڤ",
                    "𐺤": "و",
                    "𐺊": "خ",
